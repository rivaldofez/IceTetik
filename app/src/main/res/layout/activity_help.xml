<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackgroundColor"
    android:padding="24dp"
    tools:context=".page.settings.HelpActivity">

    <TextView
        android:id="@+id/tv_title_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bantuan"
        android:textAlignment="center"
        android:textSize="28sp"
        android:fontFamily="@font/league_spartan_bold"
        android:textColor="@color/cream_100"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_need_help"
        style="@style/BodyFaqTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Perlu bantuan?\nhubungi kami di instagram"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_help"
        />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/ItemButtonFaq"
        android:id="@+id/btn_ig"
        android:layout_width="match_parent"
        android:text="Link IG"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_need_help"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_call_support"
        style="@style/BodyFaqTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="atau hubungi nomor berikut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_ig"
        />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/ItemButtonFaq"
        android:id="@+id/btn_contact_person"
        android:layout_width="match_parent"
        android:text="Contact Person"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_call_support"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>