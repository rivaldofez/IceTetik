<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackgroundColor"
    android:padding="30dp"
    tools:context=".page.questionnaire.ResultQuestionnaireActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fr_container_questionnaire"
        android:padding="24dp"
        >

        <TextView
            android:id="@+id/tv_title_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/fr_title_questionnaire"
            android:fontFamily="@font/league_spartan_bold"
            android:paddingHorizontal="30dp"
            android:paddingVertical="8dp"
            android:text="HASIL"
            android:textColor="@color/primaryBackgroundColor"
            android:textSize="36sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_title_result_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/league_spartan_regular"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:text="Dari pengisian kuesioner DASS-42 untuk menilai tingkat stress, kecemasan dan depresi."
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_title_result"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_title_stress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tingkat Stress Anda"
            android:gravity="center"
            android:textSize="18sp"
            android:textAllCaps="true"
            android:fontFamily="@font/league_spartan_medium"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title_result_intro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_result_stress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginVertical="4dp"
            android:background="@drawable/fr_button_option_questionnaire"
            android:fontFamily="@font/league_spartan_medium"
            android:gravity="center"
            android:text="Normal"
            android:textAllCaps="true"
            android:textColor="@color/primaryBackgroundColor"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_title_stress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_title_worry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tingkat Kecemasan Anda"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:textAllCaps="true"
            android:fontFamily="@font/league_spartan_medium"
            app:layout_constraintTop_toBottomOf="@id/tv_result_stress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_result_worry"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginVertical="4dp"
            android:background="@drawable/fr_button_option_questionnaire"
            android:fontFamily="@font/league_spartan_medium"
            android:gravity="center"
            android:text="Normal"
            android:textAllCaps="true"
            android:textColor="@color/primaryBackgroundColor"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_title_worry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_title_depression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tingkat Depresi Anda"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:textAllCaps="true"
            android:fontFamily="@font/league_spartan_medium"
            app:layout_constraintTop_toBottomOf="@id/tv_result_worry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_result_depression"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginVertical="4dp"
            android:background="@drawable/fr_button_option_questionnaire"
            android:fontFamily="@font/league_spartan_medium"
            android:gravity="center"
            android:text="Normal"
            android:textAllCaps="true"
            android:textColor="@color/primaryBackgroundColor"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_depression"
            />

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_next_24"
            android:layout_marginTop="24dp"
            app:tint="@color/cream_100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.constraintlayout.widget.ConstraintLayout>