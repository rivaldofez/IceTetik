<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IceTetik" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.IceTetik" parent="Base.Theme.IceTetik" />

    <style name="AuthButtonTextStyle">
        <item name="android:fontFamily">@font/opensans_extrabold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AuthHeadingTextStyle">
        <item name="android:fontFamily">@font/league_spartan_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AuthEditTextStyle">
        <item name="android:fontFamily">@font/league_spartan_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_100</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="MoodCardTextStyle">
        <item name="android:fontFamily">@font/league_spartan_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="JournalButtonTextStyle">
        <item name="android:fontFamily">@font/opensans_extrabold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primaryBackgroundColor</item>
    </style>

    <style name="MainHeaderTextStyle">
        <item name="android:fontFamily">@font/league_spartan_bold</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">@color/primaryBackgroundColor</item>
    </style>

    <style name="MainHeaderReverseTextStyle">
        <item name="android:fontFamily">@font/league_spartan_bold</item>
        <item name="android:shadowColor">@color/primaryBackgroundColor</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HeaderCalendarTextStyle">
        <item name="android:fontFamily">@font/kolka_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primaryBackgroundColor</item>
    </style>

    <style name="HeaderEmotionTextStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/cream_100</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/league_spartan_bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SecondHeaderEmotionTextStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/league_spartan_bold</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="ItemCalendarTextStyle">
        <item name="android:fontFamily">@font/kolka_regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primaryBackgroundColor</item>
    </style>

    <style name="ItemTextBarChartMood">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/league_spartan_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:rotation">-45</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ItemButtonFaq">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/fr_item_faq</item>
        <item name="android:fontFamily">@font/league_spartan_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primaryBackgroundColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="BodyFaqTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/league_spartan_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SpinnerThemeTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/league_spartan_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>