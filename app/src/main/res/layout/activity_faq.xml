<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackgroundColor"
    android:padding="24dp"
    tools:context=".page.settings.faq.FaqActivity">
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_frequently_asked_question"
        android:textColor="@color/cream_100"
        android:textSize="24sp"
        android:fontFamily="@font/league_spartan_bold"
        android:textAllCaps="true"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    
    <ImageView
        android:id="@+id/iv_mascot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/img_mascot_faq"
        android:adjustViewBounds="true"
        android:layout_marginEnd="4dp"
        android:contentDescription="@string/cd_image_mascot_faq"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/ItemButtonFaq"
        android:id="@+id/btn_about_icetetik"
        android:layout_width="match_parent"
        android:text="@string/txt_what_is_ice_tetik"
        app:layout_constraintTop_toBottomOf="@id/iv_mascot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/ItemButtonFaq"
        android:id="@+id/btn_feature"
        android:layout_width="match_parent"
        android:text="@string/txt_what_are_feature_ice_tetik"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_about_icetetik"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/ItemButtonFaq"
        android:id="@+id/btn_cooperation"
        android:layout_width="match_parent"
        android:text="@string/txt_how_to_collab_with_ice_tetik"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_feature"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/ItemButtonFaq"
        android:id="@+id/btn_market"
        android:layout_width="match_parent"
        android:text="@string/txt_how_can_i_buy_product_ice_tetik"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_cooperation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/ItemButtonFaq"
        android:id="@+id/btn_support"
        android:layout_width="match_parent"
        android:text="@string/txt_how_to_support_ice_tetik"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_market"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/ItemButtonFaq"
        android:id="@+id/btn_ios_support"
        android:layout_width="match_parent"
        android:text="@string/txt_is_available_in_ios"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_support"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>