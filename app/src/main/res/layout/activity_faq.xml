<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackgroundColor"
    android:padding="24dp"
    tools:context=".page.settings.FaqActivity">
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Frequently\nAsked\nQuestion"
        android:textColor="@color/cream_100"
        android:textSize="24sp"
        android:fontFamily="@font/league_spartan_bold"
        android:textAllCaps="true"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    
    <ImageView
        android:id="@+id/iv_mascot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/img_mascot_faq"
        android:adjustViewBounds="true"
        android:layout_marginEnd="4dp"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/ItemButtonFaq"
        android:id="@+id/btn_about_icetetik"
        android:layout_width="match_parent"
        android:text="Apa itu ice-tetik"
        app:layout_constraintTop_toBottomOf="@id/iv_mascot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/ItemButtonFaq"
        android:id="@+id/btn_feature"
        android:layout_width="match_parent"
        android:text="Apa saja fitur aplikasi ini?"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_about_icetetik"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/ItemButtonFaq"
        android:id="@+id/btn_cooperation"
        android:layout_width="match_parent"
        android:text="Cara bekerja sama dengan ice-tetik"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_feature"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/ItemButtonFaq"
        android:id="@+id/btn_market"
        android:layout_width="match_parent"
        android:text="Apakah saya bisa membeli product ice tetik melalui aplikasi ini?"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_cooperation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/ItemButtonFaq"
        android:id="@+id/btn_support"
        android:layout_width="match_parent"
        android:text="Bagaimana cara saya mendukung ice-tetik?"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_market"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/ItemButtonFaq"
        android:id="@+id/btn_ios_support"
        android:layout_width="match_parent"
        android:text="Apakah aplikasi ini tersedia untuk IOS"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_support"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>