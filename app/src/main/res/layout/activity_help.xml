<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackgroundColor"
    android:padding="24dp"
    tools:context=".page.settings.HelpActivity">

    <TextView
        android:id="@+id/tv_title_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Umpan Balik"
        android:textAlignment="center"
        android:textSize="28sp"
        android:fontFamily="@font/league_spartan_bold"
        android:textColor="@color/cream_100"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_give_feedback"
        style="@style/BodyFaqTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Berikan umpan balik untuk aplikasi dan produk kami dengan mengisi link berikut:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_feedback"
        />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/ItemButtonFaq"
        android:id="@+id/btn_gform"
        android:layout_width="match_parent"
        android:text="Link gform"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_give_feedback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_give_support"
        style="@style/BodyFaqTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Beri support dengan melakukan rating penilaian sempurna pada playstore dan follow akun sosial media kami"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_gform"
        />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/ItemButtonFaq"
        android:id="@+id/btn_linktree"
        android:layout_width="match_parent"
        android:text="Linktree"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_give_support"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_support_with_pray"
        style="@style/BodyFaqTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Support kami dengan jalur langit, berikan doa terbaik untuk kemajuan ice-tetik company, share aplikasi ini agar bisa menjangkau banyak orang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_linktree"
        />

    <TextView
        android:id="@+id/tv_thank_you"
        style="@style/BodyFaqTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Kami mengucapkan terima kasih yang sebesar besarnya untuk semua yang sudah mendukukng kami"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_support_with_pray"
        />

    <TextView
        android:id="@+id/tv_ice_tetik"
        style="@style/BodyFaqTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/cream_100"
        android:text="ice tetik\nicy delight, healthy inside!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_thank_you"
        />






</androidx.constraintlayout.widget.ConstraintLayout>