<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackgroundColor"
    android:padding="16dp"
    tools:context=".relaxation.ClosingVideoFragment">

    <TextView
        android:id="@+id/tv_title_thank_you"
        style="@style/HeaderEmotionTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terima Kasih\ntelah percaya min-tik untuk berbagi, kamu sudah melakukan yang terbaik."
        app:layout_constraintBottom_toTopOf="@+id/iv_mascot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_mascot"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/img_mascot"
        app:layout_constraintBottom_toTopOf="@+id/btn_back_main_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_thank_you" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_back_main_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cream_75"
        android:text="Kembali Ke Halaman Utama"
        android:textColor="@color/primaryBackgroundColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_mascot"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>